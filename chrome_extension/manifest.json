{
  "manifest_version": 3,
  "name": "Transaktor",
  "version": "1.0",
  "description": "Import bank transactions directly into Transaktor",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "*bank*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["*://*.scotiabank.com/*"],
    "js": [
      "utils/functions.js",
      "services/services.js",
      "banks/scotiabank.js",
      "content.js"
    ]
  }],
  "background": {
    "service_worker": "background.js"
  }
}