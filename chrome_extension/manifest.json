{
  "manifest_version": 3,
  "name": "Transaktor",
  "version": "1.0",
  "description": "Import bank transactions directly into Transaktor",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://secure.scotiabank.com/api/credit/*",
    "https://secure.scotiabank.com/accounts/credit/*"
  ],
  "content_scripts": [{
    "matches": ["https://www.scotiaonline.scotiabank.com/online/views/accounts/accountDetails/*", "https://secure.scotiabank.com/accounts/credit/*"],
    "js": [
      "utils/functions.js",
      "services/services.js",
      "banks/scotiabank.js",
      "content.js"
    ]
  }],
  "background": {
    "service_worker": "background.js"
  }
}