{
  "manifest_version": 3,
  "name": "Transaktor",
  "version": "1.0",
  "description": "Import bank transactions directly into Transaktor",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "webRequest"
  ],
  "host_permissions": [
    "https://secure.scotiabank.com/api/credit/*",
    "https://secure.scotiabank.com/accounts/credit/*",
    "https://transaktor.bermudez.ca/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://transaktor.bermudez.ca https://secure.scotiabank.com;"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.scotiaonline.scotiabank.com/online/views/accounts/accountDetails/*",
        "https://secure.scotiabank.com/accounts/credit/*"
      ],
      "js": [
        "utils/functions.js",
        "services/services.js",
        "banks/scotiabank.js",
        "content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}